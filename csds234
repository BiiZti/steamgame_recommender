        if self.linux_var.get():
            self.selected_platforms.append("linux")
        
        if not self.selected_platforms:
            messagebox.showwarning("Warning", "Please select at least one platform")
            return
        
        # Clear existing widgets
        for widget in self.root.winfo_children():
            if not isinstance(widget, ttk.Frame) or not widget.winfo_children():
                widget.destroy()
        
        # Create price range selection frame
        price_frame = ttk.LabelFrame(self.root, text="Select Price Range")
        price_frame.pack(padx=20, pady=20, fill="both", expand=True)
        
        # Add description
        desc_label = tk.Label(
            price_frame,
            text="Choose your preferred price range:",
            font=('Arial', 10),
            bg='#f0f0f0',
            fg='#333333'
        )
        desc_label.pack(pady=10)
        
        # Predefined price ranges with custom style
        price_ranges = [
            ("Free", (0, 0)),
            ("Under $10", (0, 10)),
            ("$10 - $20", (10, 20)),
            ("$20 - $30", (20, 30)),
            ("$30 - $40", (30, 40)),
            ("$40 - $50", (40, 50)),
            ("$50 and above", (50, 1000))
        ]
        
        self.price_var = tk.StringVar()
        for text, (min_price, max_price) in price_ranges:
            frame = ttk.Frame(price_frame)
            frame.pack(pady=5, padx=20, fill="x")
            
            radio = ttk.Radiobutton(
                frame,
                text=text,
                variable=self.price_var,
                value=f"{min_price}-{max_price}",
                style='TRadiobutton'
            )
            radio.pack(side="left")
        
        # Set default selection
        self.price_var.set("0-1000")
        
        # Get Recommendations button with custom style
        button_frame = ttk.Frame(price_frame)
        button_frame.pack(pady=20)
        
        rec_button = ttk.Button(
            button_frame,
            text="Get Recommendations",
            command=self.show_recommendations,
            style='TButton'
        )
        rec_button.pack(pady=10, ipadx=20, ipady=5)
    
    def calculate_game_weight(self, game, min_price, max_price):
        """Calculate weight score (0-10) based on price, peak_ccu, and positive rate"""
        try:
            # Get game attributes
            price = float(game.get('price', 100))
            peak_ccu = int(game.get('peak_ccu', 0))
            positive = int(game.get('positive', 0))
            negative = int(game.get('negative', 0))
            
            # Calculate positive rate
            total_reviews = positive + negative
            positive_rate = positive / total_reviews if total_reviews > 0 else 0
            
            # Normalize Peak CCU
            max_ccu = 100000  # Assuming max peak CCU is 100,000
            ccu_score = min(peak_ccu / max_ccu, 1)
            
            # Normalize Positive Rate
            positive_score = positive_rate
            
            # Normalize Price
            max_price_for_score = 100 # Use a consistent max price for normalization
            price_score = 1 - (price / max_price_for_score) if price <= max_price_for_score else 0

            # Calculate final weight (0-10) based on selected price range
            if max_price > 50:
                # Reduced weight for price (e.g., 10%), increased for others
                weight = (price_score * 0.1 + ccu_score * 0.45 + positive_score * 0.45) * 10
            else:
                # Original weights for lower price ranges
                weight = (price_score * 0.4 + ccu_score * 0.3 + positive_score * 0.3) * 10
            
            return round(weight, 1)
        except Exception as e:
            print(f"Error calculating weight: {e}")
            return 0.0

    def sort_games(self, games, min_price, max_price, sort_by="weight"):
        """Sort games based on selected criteria"""
        sorted_games = []
        for game in games:
            # Get game attributes
            price = float(game.get('price', 100))
            peak_ccu = int(game.get('peak_ccu', 0))
            positive = int(game.get('positive', 0))
            negative = int(game.get('negative', 0))
            total_reviews = positive + negative
            positive_rate = positive / total_reviews if total_reviews > 0 else 0
            
            # Calculate weight score
            weight = self.calculate_game_weight(game, min_price, max_price)
            
            # Create sort key based on selected criteria
            if sort_by == "price":
                # Price: Ascending (lower is better)
                sort_key = (price, -peak_ccu, -positive_rate) # Add secondary sort factors
            elif sort_by == "peak_ccu":
                # Peak CCU: Descending (higher is better)
                # Use positive peak_ccu with reverse=True for descending sort
                sort_key = (peak_ccu, weight, -positive_rate) # Add secondary sort factors
            elif sort_by == "positive_rate":
                # Positive Rate: Descending (higher is better)
                # Use positive rate with reverse=True for descending sort
                sort_key = (positive_rate, weight, -peak_ccu) # Add secondary sort factors
            else:  # weight (default)
                # Weight: Descending (higher is better)
                sort_key = (
                    weight,
                    -peak_ccu,
                    -positive_rate,
                    -(positive + negative)
                )
            
            sorted_games.append((sort_key, game))
        
        # Sort based only on the sort_key (first element of the tuple)
        # For price, sorting ascending (lowest first)
        # For others, sorting descending (highest first)
        reverse_sort = sort_by != "price"
        sorted_games.sort(key=lambda item: item[0], reverse=reverse_sort)
        
        # Return only the game objects
        return [game for _, game in sorted_games]

    def get_weight_formula_text(self, min_price, max_price):
        """Generate text explaining the weight score calculation"""
        if max_price > 50:
            return "Weight Score = (Price Score × 0.1) + (Peak CCU Score × 0.45) + (Positive Rate × 0.45)"
        else:
            return "Weight Score = (Price Score × 0.4) + (Peak CCU Score × 0.3) + (Positive Rate × 0.3)"

    def show_recommendations(self):
        try:
            # Get price range
            min_price, max_price = map(float, self.price_var.get().split("-"))
            
            # Build query
            query = {
                "price": {"$gte": min_price, "$lte": max_price}
            }
            
            # Add platform conditions
            platform_conditions = []
            for platform in self.selected_platforms:
                platform_conditions.append({platform: "True"})
            
            if platform_conditions:
                query["$or"] = platform_conditions
            
            # --- Optimization: Preliminary sort/limit in DB ---
            prelim_limit = 100 
            prelim_results_cursor = self.collection.find(query).sort("peak_ccu", -1).limit(prelim_limit)
            prelim_results = list(prelim_results_cursor)
            
            # Clear existing widgets
            for widget in self.root.winfo_children():
                if not isinstance(widget, ttk.Frame) or not widget.winfo_children():
                    widget.destroy()
            
            # Create results frame
            results_frame = ttk.LabelFrame(self.root, text="Select up to 3 games you like")
            results_frame.pack(padx=20, pady=20, fill="both", expand=True)
            
            # Add description
            desc_label = tk.Label(
                results_frame,
                text="Select the games you enjoy to get personalized recommendations:",
                font=('Arial', 10),
                bg='#f0f0f0',
                fg='#333333'
            )
            desc_label.pack(pady=10)
            
            # Add sorting options
            sort_frame = ttk.Frame(results_frame)
            sort_frame.pack(fill="x", padx=10, pady=5)
            
            sort_label = tk.Label(
                sort_frame,
                text="Sort by:",
                font=('Arial', 9),
                bg='#f0f0f0',
                fg='#333333'
            )
            sort_label.pack(side="left", padx=5)
            
            self.sort_var = tk.StringVar(value="weight")
            sort_options = ttk.Combobox(
                sort_frame,
                textvariable=self.sort_var,
                values=["weight", "price", "peak_ccu", "positive_rate"],
                state="readonly",
                width=15
            )
            sort_options.pack(side="left", padx=5)
            
            # Add sort button
            sort_button = ttk.Button(
                sort_frame,
                text="Sort",
                command=lambda: self.update_sort(min_price, max_price, prelim_results, results_frame)
            )
            sort_button.pack(side="left", padx=5)
            
            # Add weight formula explanation
            formula_frame = ttk.Frame(results_frame)
            formula_frame.pack(fill="x", padx=10, pady=5)
            
            formula_title = tk.Label(
                formula_frame,
                text="Weight Score Calculation:",
                font=('Arial', 10, 'bold'),
                bg='#f0f0f0',
                fg='#2c5282'
            )
            formula_title.pack(anchor="w")
            
            formula_text = tk.Label(
                formula_frame,
                text=self.get_weight_formula_text(min_price, max_price),
                font=('Arial', 9),
                bg='#f0f0f0',
                fg='#333333'
            )
            formula_text.pack(anchor="w", padx=20)
            
            # Add formula details
            details_text = """
            • Price Score: Lower price = Higher score (max $100)
            • Peak CCU Score: Higher player count = Higher score (max 100,000)
            • Positive Rate: Higher positive reviews = Higher score
            """
            details_label = tk.Label(
                formula_frame,
                text=details_text,
                font=('Arial', 8),
                bg='#f0f0f0',
                fg='#666666',
                justify='left'
            )
            details_label.pack(anchor="w", padx=20, pady=5)
            
            # Now sort this smaller list using our custom weight-based sorting
            sorted_results = self.sort_games(prelim_results, min_price, max_price, self.sort_var.get())
            
            # Limit to the final number needed for display (top 20)
            results = sorted_results[:20]
            
            # Create canvas and scrollbar for scrollable frame
            canvas = tk.Canvas(results_frame, bg='#f0f0f0', highlightthickness=0)
            scrollbar = ttk.Scrollbar(results_frame, orient="vertical", command=canvas.yview)
            scrollable_frame = ttk.Frame(canvas)
            
            scrollable_frame.bind(
                "<Configure>",
                lambda e: canvas.configure(scrollregion=canvas.bbox("all"))
            )
            
            canvas.create_window((0, 0), window=scrollable_frame, anchor="nw")
            canvas.configure(yscrollcommand=scrollbar.set)
            
            # Pack canvas and scrollbar
            canvas.pack(side="left", fill="both", expand=True, padx=10)
            scrollbar.pack(side="right", fill="y")
            
            # Clear previous checkboxes
            self.game_checkboxes.clear()
            
            # Add results to scrollable frame
            for game in results:
                game_frame = ttk.Frame(scrollable_frame)
                game_frame.pack(fill="x", padx=5, pady=5)
                
                # Calculate weight for this game
                weight = self.calculate_game_weight(game, min_price, max_price)
                
                # Create checkbox
                var = tk.BooleanVar()
                self.game_checkboxes[str(game.get("_id"))] = var
                
                # Create a frame for the checkbox and game details
                content_frame = ttk.Frame(game_frame)
                content_frame.pack(fill="x", expand=True)
                
                # Create checkbox with custom style
                checkbox = ttk.Checkbutton(
                    content_frame,
                    text=game.get("name", "Unknown"),
